{
  "extends": "tsconfig/base.json",
  "include": [
    "./src",
  ],
  "compilerOptions": {
    "target": "ES2015",
    "lib": [
      "DOM",
      "ESNext"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@app/overmind": [
        "../../src/overmind"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ],
}