{
  "extends": "tsconfig/base.json",
  "include": [
    "./src",
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false
  },
  "exclude": [
    "./dist",
    "./build",
    "./node_modules"
  ]
}