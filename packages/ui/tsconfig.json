{
  "extends": "tsconfig/base.json",
  "include": [
    "./src",
  ],
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": ".",
    "composite": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSources": false,
    "isolatedModules": true,
    "moduleResolution": "node",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveWatchOutput": true,
    "skipLibCheck": true,
    "strict": false,
    "paths": {
      "@app/overmind": [
        "./src/overmind"
      ]
    }
  },
  "exclude": [
    "dist",
    "build",
    "node_modules"
  ]
}